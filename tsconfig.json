{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES6", "ES2015", "ESNEXT", "dom"],
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "importHelpers": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "lib",
    "test",
    "assets",
  ]
}
